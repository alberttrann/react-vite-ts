{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node", // Kept your original setting
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Interoperability Fixes */
    "esModuleInterop": true,              // <-- RECOMMENDED ADDITION (helps with compatibility)
    "allowSyntheticDefaultImports": true, // <-- ADDED (fixes the 'export =' error)

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "types": ["node"] // Kept your original setting
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}